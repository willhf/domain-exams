<form name="interest" method="POST" data-netlify="true" data-netlify-honeypot="company" action="/thanks/">
    <input type="hidden" name="form-name" value="interest" />

    <div class="form-card">
        <div class="field">
            <label for="email">Email</label>
            <input id="email" name="email" type="email" required autocomplete="email" placeholder="you@example.com" />
        </div>

        <fieldset class="field">
            <legend>Subject of Primary Interest</legend>
            <div class="grid-checks">
                <label>
                    <input type="radio" name="subject" value="Algorithms and Data Structures" required />
                    Algorithms and Data Structures
                </label>
                <label>
                    <input type="radio" name="subject" value="Linear Algebra" />
                    Linear Algebra
                </label>
                <label>
                    <input type="radio" name="subject" value="Probability" />
                    Probability
                </label>
                <label>
                    <input type="radio" name="subject" value="Discrete Mathematics" />
                    Discrete Mathematics
                </label>
                <label>
                    <input type="radio" name="subject" value="Theory of Computation" />
                    Theory of Computation
                </label>
                <label>
                    <input type="radio" name="subject" value="Abstract Algebra" />
                    Abstract Algebra
                </label>
                <label>
                    <input type="radio" name="subject" value="Real Analysis" />
                    Real Analysis
                </label>
                <label>
                    <input type="radio" name="subject" value="Other" />
                    Other (please specify below)
                </label>
            </div>
        </fieldset>

        <div class="field">
            <label for="locations">Preferred testing location (optional)</label>
            <input id="locations" name="locations" type="text" placeholder="e.g., New York, Boston, San Francisco" />
        </div>

        <div class="field">
            <label for="notes">Notes or feedback (optional)</label>
            <textarea id="notes" name="notes" placeholder="Tell us more (optional)"></textarea>
        </div>

        <div class="field" style="display:none;">
            <label for="company">Company</label>
            <input id="company" name="company" type="text" autocomplete="off" tabindex="-1" />
        </div>

        <div class="actions">
            <button type="submit">Submit Exam Preference</button>
        </div>
    </div>
</form>