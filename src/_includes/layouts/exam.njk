<!doctype html>
<html lang="{{ lang or 'en' }}">

<head>
    {% include "shortcodes/googleTag.njk" %}

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>
        {%- if title -%}{{ title }} · Domain Exams{%- else -%}Domain Exams{%- endif -%}
    </title>

    {# Meta description (prefer page front matter, fallback to a site default) #}
    {% set metaDescription = description or meta_description
    or "Domain Exams — independent, proof-based examinations assessing mastery of undergraduate subject material." %}
    <meta name="description" content="{{ metaDescription }}" />

    {# Open Graph / Twitter #}
    {% set ogTitle = og_title or title or "Domain Exams" %}
    {% set ogDescription = og_description or metaDescription %}
    {% set ogUrl = og_url or "https://domainexams.com" ~ (page.url or "/") %}

    <meta property="og:title" content="{{ ogTitle }}" />
    <meta property="og:description" content="{{ ogDescription }}" />
    <meta property="og:type" content="{{ og_type or 'website' }}" />
    <meta property="og:url" content="{{ ogUrl }}" />
    <meta name="twitter:card" content="{{ twitter_card or 'summary' }}" />

    <link rel="stylesheet" href="/css/base.css" />
    <link rel="stylesheet" href="/assets/katex.min.css">

    <link rel="icon" type="image/svg+xml" href="assets/favicon.svg">
</head>

<body class="{{ bodyClass or 'landing-page' }}">
    <div class="page">
        <div class="wrap">
            <nav class="breadcrumbs" aria-label="Breadcrumb">
                <a href="/">Domain Exams</a>
                <span class="sep">›</span>
                <span class="current">{{ title }}</span>
            </nav>
            {{ content | safe }}
        </div>
    </div>

    {% include "shortcodes/tawk.njk" %}
</body>

</html>