<!doctype html>
<html lang="{{ lang or 'en' }}">
<head>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=AW-17841359912"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag() { dataLayer.push(arguments); }
    gtag('js', new Date());
    gtag('config', 'AW-17841359912');
  </script>

  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <title>
    {%- if title -%}{{ title }} · Domain Exams{%- else -%}Domain Exams{%- endif -%}
  </title>

  {# Meta description (prefer page front matter, fallback to a site default) #}
  {% set metaDescription = description or meta_description
    or "Domain Exams — independent, proof-based examinations assessing mastery of undergraduate subject material." %}
  <meta name="description" content="{{ metaDescription }}" />

  {# Open Graph / Twitter #}
  {% set ogTitle = og_title or title or "Domain Exams" %}
  {% set ogDescription = og_description or metaDescription %}
  {% set ogUrl = og_url or "https://domainexams.com" ~ (page.url or "/") %}

  <meta property="og:title" content="{{ ogTitle }}" />
  <meta property="og:description" content="{{ ogDescription }}" />
  <meta property="og:type" content="{{ og_type or 'website' }}" />
  <meta property="og:url" content="{{ ogUrl }}" />
  <meta name="twitter:card" content="{{ twitter_card or 'summary' }}" />

  <link rel="stylesheet" href="/css/base.css" />

  <link rel="icon" type="image/svg+xml" href="assets/favicon.svg">
</head>

<body class="{{ bodyClass or 'landing-page' }}">
  <div class="page">
    <div class="wrap">
      {{ content | safe }}
        <footer>
          <p>
            Contact: <a href="mailto:hello@domainexams.com">hello@domainexams.com</a>
          </p>
        </footer>
    </div>
  </div>

  {# Tawk embed: set `tawkEnabled: false` in front matter (or global data) to disable #}
  {% if tawkEnabled is not defined or tawkEnabled %}
    <script type="text/javascript">
      var Tawk_API = Tawk_API || {}, Tawk_LoadStart = new Date();
      (function () {
        var s1 = document.createElement("script"), s0 = document.getElementsByTagName("script")[0];
        s1.async = true;
        s1.src = "https://embed.tawk.to/6972cd7923ac1a197c06cdfa/1jfk758gp";
        s1.charset = "UTF-8";
        s1.setAttribute("crossorigin", "*");
        s0.parentNode.insertBefore(s1, s0);
      })();
    </script>
  {% endif %}
</body>
</html>
